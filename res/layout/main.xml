<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button android:text="Start Couchbase Service" android:id="@+id/start_couchbase_button" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    <Button android:text="Kill Couchbase Process" android:id="@+id/kill_couchbase_button" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    <Button android:text="Stop Couchbase Service" android:id="@+id/stop_couchbase_button" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView1" android:text="Open Files:" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/open_file_count" android:text="" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
</LinearLayout>
